{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "www/src/script/**/*"
  ]
}